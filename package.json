{
  "name": "litemint",
  "productName": "litemint",
  "version": "1.3.0",
  "description": "Litemint Wallet and Instant Games Platform",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": "https://github.com/litemint/litemint-electron",
  "keywords": [
    "Stellar",
    "wallet",
    "marketplace"
  ],
  "author": "Litemint LLC",
  "license": "MIT",
  "devDependencies": {
    "electron": "^5.0.6",
    "electron-builder": "^21.0.15"
  },
  "build": {
    "productName": "Litemint",
    "appId": "com.litemint.app",
    "mac": {
      "category": "finance"
    },
    "linux": {
      "target": [
        "tar.gz"
      ]
    },
    "win": {
      "target": [
        "portable",
        "nsis"
      ]
    },
    "portable": {
      "artifactName": "Litemint.exe"
    }
  }
}
